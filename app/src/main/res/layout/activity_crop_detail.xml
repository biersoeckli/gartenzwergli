<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.crops.cropDetail.CropDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toTopOf="@+id/addCropToBedButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cropImageView"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:contentDescription="@string/image_of_the_crop"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_local_florist_black_24dp"
                android:background="@color/cardview_dark_background"
                />

            <TextView
                android:id="@+id/cropTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingEnd="15dp"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Tomato" />

            <TextView
                android:id="@+id/cropSubtitleScientificNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:textStyle="italic"
                android:typeface="serif"
                tools:text="Solanum lycopersicum" />

            <TextView
                android:id="@+id/cropSubtitleAlternateNamesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-light"
                android:textSize="14sp"
                android:typeface="normal"
                tools:text="Pomodoro" />

            <TextView
                android:id="@+id/cropDescriptionTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingEnd="15dp"
                android:text="@string/description"
                android:textSize="16sp"
                android:textStyle="bold"
                app:drawableLeftCompat="@drawable/ic_edit_black_24dp" />

            <TextView
                android:id="@+id/cropDescriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingEnd="15dp"
                tools:text="Test" />

            <TextView
                android:id="@+id/medianDaysForFirstHarvestTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="15dp"
                android:text="@string/first_harvest"
                android:textSize="16sp"
                android:textStyle="bold"
                app:drawableLeftCompat="@drawable/ic_auto_awesome_black_24" />

            <TextView
                android:id="@+id/medianDaysForFirstHarvestTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingEnd="15dp"
                tools:text="in 300 days" />

            <TextView
                android:id="@+id/medianDaysToLastHarvestTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="15dp"
                android:text="@string/last_harvest"
                android:textSize="16sp"
                android:textStyle="bold"
                app:drawableLeftCompat="@drawable/ic_hourglass_bottom_black_24dp" />

            <TextView
                android:id="@+id/medianDaysToLastHarvestTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingEnd="15dp"
                tools:text="in 300 days" />

            <TextView
                android:id="@+id/medianLifespanTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="15dp"
                android:text="@string/median_lifespan"
                android:textSize="16sp"
                android:textStyle="bold"
                app:drawableLeftCompat="@drawable/ic_local_florist_black_24dp" />

            <TextView
                android:id="@+id/medianLifespanTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingEnd="15dp"
                tools:text="500 days" />

            <TextView
                android:id="@+id/sowingMethodTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="15dp"
                android:text="@string/sowing_method"
                android:textSize="16sp"
                android:textStyle="bold"
                app:drawableLeftCompat="@drawable/ic_agriculture_black_24dp" />

            <TextView
                android:id="@+id/sowingMethodTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingEnd="15dp"
                tools:text="Direct seed outdoors, thin to 20cm when seedlings are 3cm tall" />

            <TextView
                android:id="@+id/sunRequirementsTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="15dp"
                android:text="@string/sun_requirements"
                android:textSize="16sp"
                android:textStyle="bold"
                app:drawableLeftCompat="@drawable/ic_wb_sunny_black_24dp" />

            <TextView
                android:id="@+id/sunRequirementsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingEnd="15dp"
                tools:text="Direct seed outdoors, thin to 20cm when seedlings are 3cm tall" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/addCropToBedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/add_to_gaertli"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>