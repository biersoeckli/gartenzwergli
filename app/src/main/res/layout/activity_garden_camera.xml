<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GardenCameraActivity">

    <androidx.camera.view.PreviewView
        android:id="@+id/gardenCameraViewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.camera.view.PreviewView>

    <Button
        android:id="@+id/image_capture_button"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_margin="16dp"
        android:elevation="2dp"
        android:text="@string/take_photo"
        app:icon="@drawable/ic_camera_white_24dp"
        app:iconGravity="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/image_chooser_button"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_margin="16dp"
        android:text="Choose Picture"
        app:icon="@drawable/ic_photo_library_white_24dp"
        app:layout_constraintBottom_toTopOf="@id/image_capture_button"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
