<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp">

    <TextView
        android:id="@+id/dayText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:gravity="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="16sp"
        tools:text="22" />

    <View
        android:id="@+id/dayDotViewSewedCrop"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        android:layout_gravity="bottom|end"
        android:background="@drawable/ic_agriculture_black_24dp" />

    <View
        android:id="@+id/dayDotViewFirstHarvest"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        android:layout_gravity="bottom|end"
        android:background="@drawable/ic_auto_awesome_black_24" />

    <View
        android:id="@+id/dayDotViewLastHarvest"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        android:layout_gravity="bottom|end"
        android:background="@drawable/ic_hourglass_bottom_black_24dp" />

    <View
        android:id="@+id/dayDotViewCustomEvent"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        android:layout_gravity="bottom|end"
        android:background="@drawable/ic_local_florist_black_24dp" />
</FrameLayout>